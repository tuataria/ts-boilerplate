{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "outDir": "./dist",
        "paths": {
            "@lib/*": [
                "src/lib/*"
            ],
            "@root/*": [
                "*"
            ]
        },
        "resolveJsonModule": true,
        "rootDir": "./",
        "target": "ES2019",
        "module": "commonjs"
    },
    "exclude": [
        "**/node_modules",
        "**/dist"
    ],
    "include": [
        "./src/**/*"
    ]
}
